<Page x:Class="DcConManager.Pages.QuickstartPage3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DcConManager.Pages"
      xmlns:controls="clr-namespace:DcConManager.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuickstartPage1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="3. Github 연결설정"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <controls:MetroButton x:Name="PrevButton"
                                  Text="이전"
                                  Margin="4" IsAccented="True"
                                  Click="PrevButton_Click"/>
            <controls:MetroButton x:Name="NextButton"
                                  Text="다음"
                                  Margin="4" IsAccented="True"
                                  Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
